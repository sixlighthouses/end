<%#
  Notes form with fallback to ActionText or Marksmith
  Variables:
  - note: Note object
  - f: Rails form builder object
%>
<!-- Title Field -->
<div>
  <%= f.label :title, class: "block text-md font-medium text-slate-700 mb-2" %>
  <%= f.text_field :title, 
        class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", 
        placeholder: "Enter note title" %>
  <% if note.errors[:title].any? %>
    <p class="mt-1 text-sm text-red-600"><%= note.errors[:title].first %></p>
  <% end %>
</div>

<!-- Body Field -->
<div>
  <%= f.label :body, class: "block text-md font-medium text-slate-700 mb-2 mt-2" %>
  <%= f.marksmith :body, 
        class: "w-full min-h-[400px] border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
        placeholder: "Write your note in markdown here..." %>
  <% if note.errors[:body].any? %>
    <p class="mt-1 text-sm text-red-600"><%= note.errors[:body].first %></p>
  <% end %>
</div>

<!-- Submit Button -->
<div class="flex items-center justify-between">
  <div>
    <%= f.submit note.new_record? ? "Create Note" : "Update Note", 
          class: "bg-indigo-600 text-white font-medium py-2.5 mt-6 px-6 rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer shadow-md" %>
  </div>
  
  <% unless note.new_record? %>
    <%= link_to "Cancel", [@note.todo, note], 
          class: "text-slate-600 hover:text-slate-700 font-medium text-sm transition-colors" %>
  <% end %>
</div>
