<% content_for :title, @note.title %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100 py-6">
  <div class="max-w-4xl w-full mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="bg-indigo-100 text-indigo-800 text-sm font-medium px-3 py-1 rounded-full inline-block mb-4">
        <% if not @todo.nil? %>
        Note for <%= @todo.name %>
        <% end %>
      </div>
      <h1 class="text-4xl font-bold text-slate-900 mb-2"><%= @note.title %></h1>
      <p class="text-slate-500 text-sm">Created <%= time_ago_in_words(@note.created_at) %> ago</p>
    </div>

    <!-- Note Content -->
    <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-8 mb-6">
      <div class="markdown-content max-w-none">
        <%== render_markdown(@note.body) %>
      </div>
    </div>

    <!-- Actions -->
    <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6">
      <div class="flex justify-between items-center">
        <div class="flex space-x-4">
          <% if not @todo.nil?%>
          <%= link_to "Edit", edit_todo_note_path(@todo, @note), 
                class: "bg-indigo-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-indigo-700 transition-colors" %>
          <%= link_to "Delete", [@todo, @note], 
                method: :delete, 
                class: "bg-red-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-red-700 transition-colors",
                data: { turbo_confirm: "Are you sure you want to delete this note?" } %>
        <%= link_to "← Back to Todo", @todo, 
              class: "text-slate-600 hover:text-slate-700 font-medium text-sm transition-colors" %>
          <% else %>
          <%= link_to "Edit", edit_note_path(@note), 
                class: "bg-indigo-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-indigo-700 transition-colors" %>
          <%= link_to "Delete", @note, 
                method: :delete, 
                class: "bg-red-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-red-700 transition-colors",
                data: { turbo_confirm: "Are you sure you want to delete this note?" } %>
  
        <%= link_to "← Back to Notes", notes_path, 
              class: "text-slate-600 hover:text-slate-700 font-medium text-sm transition-colors" %>
          <% end %>

      </div>
    </div>
  </div>
</div>
