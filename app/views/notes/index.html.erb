<% content_for :title, "All Notes" %>

<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Notes</h1>

    <div class="flex items-center space-x-3">
      <%= link_to "New note", new_note_path(@note), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  </div>

  <!-- Notes Grid -->
  <% if @notes.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @notes.each do |note| %>
        <div
          class="
            bg-white rounded-lg shadow-md border border-slate-200
            hover:shadow-lg transition-shadow p-6
          "
        >
          <!-- Note Header -->
          <div class="mb-4">
            <div class="flex items-start justify-between mb-2">
              <h3 class="text-lg font-semibold text-slate-900 line-clamp-2">
                <%= note.title %>
              </h3>
            </div>

            <div class="text-xs text-slate-500 space-x-3">
              <% if not note.todo.nil? %>
                <span>
                  From:
                  <%= link_to "todo", todo_path(note.todo), class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
                </span>
              <% end %>

              <span><%= time_ago_in_words(note.created_at) %> ago</span>
            </div>
          </div>

          <!-- Note Preview -->
          <div class="mb-4">
            <% if note.body.present? %>
              <div class="text-sm text-slate-600 line-clamp-3">
                <%== render_markdown(strip_tags(note.body).truncate(150)) %>
              </div>
            <% else %>
              <p class="text-sm text-slate-400 italic">No content</p>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="flex justify-between items-center pt-4 border-t border-slate-100">
            <div class="flex space-x-2">
              <% if note.todo.present? %>
                <%= link_to edit_todo_note_path(note.todo, note), 
                      class: "text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors",
                      title: "Edit note" do %>
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                    ></path>
                  </svg>
                  Edit
                <% end %>
              <% else %>
                <%= link_to edit_note_path(note), 
                      class: "text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors",
                      title: "Edit note" do %>
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                    ></path>
                  </svg>
                  Edit
                <% end %>
              <% end %>
            </div>

            <div class="flex space-x-2">
              <% if note.todo.present? %>
                <%= link_to [note.todo, note], 
                      class: "inline-flex items-center text-sm text-indigo-600 hover:text-indigo-700 font-medium transition-colors",
                      title: "View full note" do %>
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                    ></path>

                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                    ></path>
                  </svg>
                  View
                <% end %>
              <% else %>
                <%= link_to note_path(note), 
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "inline-flex items-center text-sm text-red-600 hover:text-red-700 font-medium transition-colors",
                      title: "Delete note" do %>
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                    ></path>
                  </svg>
                  Delete
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="text-slate-500">
        <svg
          class="mx-auto h-12 w-12 text-slate-400 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          ></path>
        </svg>

        <h3 class="text-xl font-medium mb-2">No notes found</h3>

        <p class="text-sm">Create some todos and add notes to see them here.</p>
      </div>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="text-center mt-8">
    <%= link_to "â† Back to Todos", todos_path, 
          class: "text-slate-600 hover:text-slate-700 font-medium transition-colors" %>
  </div>
</div>
