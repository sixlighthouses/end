<% content_for :title, "All Notes" %>

<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-slate-900 mb-4">All Notes</h1>
    <p class="text-slate-600">Notes from all todos</p>
  </div>

  <!-- Notes Grid -->
  <% if @notes.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @notes.each do |note| %>
        <div class="bg-white rounded-lg shadow-md border border-slate-200 hover:shadow-lg transition-shadow p-6">
          <!-- Note Header -->
          <div class="mb-4">
            <div class="flex items-start justify-between mb-2">
              <h3 class="text-lg font-semibold text-slate-900 line-clamp-2"><%= note.title %></h3>
            </div>
            <div class="text-xs text-slate-500 space-x-3">
              <span>From: <%= link_to note.todo.name, todo_path(note.todo), class: "text-indigo-600 hover:text-indigo-700 font-medium" %></span>
              <span><%= time_ago_in_words(note.created_at) %> ago</span>
            </div>
          </div>

          <!-- Note Preview -->
          <div class="mb-4">
            <% if note.body.present? %>
              <div class="text-sm text-slate-600 line-clamp-3">
                <%== render_markdown(strip_tags(note.body).truncate(150)) %>
              </div>
            <% else %>
              <p class="text-sm text-slate-400 italic">No content</p>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="flex justify-between items-center pt-4 border-t border-slate-100">
            <div class="flex space-x-2">
              <%= link_to edit_todo_note_path(note.todo, note), 
                    class: "text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors",
                    title: "Edit note" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit
              <% end %>
            </div>
            
            <%= link_to [note.todo, note], 
                  class: "inline-flex items-center text-sm text-indigo-600 hover:text-indigo-700 font-medium transition-colors",
                  title: "View full note" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              View
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="text-slate-500">
        <svg class="mx-auto h-12 w-12 text-slate-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="text-xl font-medium mb-2">No notes found</h3>
        <p class="text-sm">Create some todos and add notes to see them here.</p>
      </div>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="text-center mt-8">
    <%= link_to "â† Back to Todos", todos_path, 
          class: "text-slate-600 hover:text-slate-700 font-medium transition-colors" %>
  </div>
</div>
