<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100 py-6">
  <div class="max-w-md w-full mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-slate-900 mb-2">Create Account</h1>
      <p class="text-slate-600">Join end. and start organizing your work</p>
    </div>

    <!-- Signup Form -->
    <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-8">
      <%= form_with(model: @user, local: true, class: "space-y-6") do |form| %>
        <!-- Name Field -->
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.text_field :name, 
                class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                placeholder: "Enter your full name" %>
          <% if @user.errors[:name].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Email Field -->
        <div>
          <%= form.label :email_address, "Email", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.email_field :email_address, 
                class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                placeholder: "you@example.com" %>
          <% if @user.errors[:email_address].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:email_address].first %></p>
          <% end %>
        </div>

        <!-- Password Field -->
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.password_field :password, 
                class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                placeholder: "Minimum 6 characters" %>
          <% if @user.errors[:password].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.password_field :password_confirmation, 
                class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                placeholder: "Re-enter your password" %>
          <% if @user.errors[:password_confirmation].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password_confirmation].first %></p>
          <% end %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Create Account", 
                class: "w-full bg-indigo-600 text-white font-medium py-3 px-4 rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer shadow-md" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-slate-500">Already have an account?</span>
        </div>
      </div>

      <!-- Login Link -->
      <div class="text-center">
        <%= link_to "Sign In", login_path, 
              class: "text-indigo-600 hover:text-indigo-700 font-medium text-sm transition-colors" %>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-6">
      <p class="text-xs text-slate-500">
        By creating an account, you agree to our terms and privacy policy
      </p>
    </div>
  </div>
</div>
