<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100 py-6">
  <div class="max-w-md w-full mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-slate-900 mb-2">Welcome Back</h1>
      <p class="text-slate-600">Sign in to continue to end.</p>
    </div>

    <!-- Login Form -->
    <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-8">
      <% if alert = flash[:alert] %>
        <div class="mb-6 p-3 bg-red-50 border border-red-200 rounded-lg">
          <p class="text-sm text-red-600"><%= alert %></p>
        </div>
      <% end %>

      <% if notice = flash[:notice] %>
        <div class="mb-6 p-3 bg-green-50 border border-green-200 rounded-lg">
          <p class="text-sm text-green-600"><%= notice %></p>
        </div>
      <% end %>

      <%= form_with url: session_url, local: true, class: "space-y-6" do |form| %>
        <!-- Email Field -->
        <div>
          <%= form.label :email_address, "Email", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.email_field :email_address, 
                required: true, 
                autofocus: true, 
                autocomplete: "username", 
                placeholder: "you@example.com", 
                value: params[:email_address],
                class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.password_field :password, 
                required: true, 
                autocomplete: "current-password", 
                placeholder: "Enter your password", 
                maxlength: 72, 
                class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Sign In", 
                class: "w-full bg-indigo-600 text-white font-medium py-3 px-4 rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer shadow-md" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-slate-500">Need help?</span>
        </div>
      </div>

      <!-- Forgot Password Link -->
      <div class="text-center">
        <%= link_to "Forgot your password?", new_password_path, 
              class: "text-indigo-600 hover:text-indigo-700 font-medium text-sm transition-colors" %>
      </div>
    </div>

    <!-- Sign Up Link -->
    <div class="text-center mt-6">
      <p class="text-sm text-slate-600">
        Don't have an account? 
        <%= link_to "Create one", new_user_path, 
              class: "text-indigo-600 hover:text-indigo-700 font-medium transition-colors" %>
      </p>
    </div>
  </div>
</div>