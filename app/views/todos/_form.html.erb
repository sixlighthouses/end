<%= form_with(model: todo, local: true, class: "space-y-6") do |form| %>
  <% if todo.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h2 class="text-sm font-medium text-red-800 mb-2">
        <%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name Field 
  <%# <div>
    <%= form.label :name, class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.text_field :name, 
          class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", 
          placeholder: "Enter todo name" %>
    <% if todo.errors[:name].any? %>
      <p class="mt-1 text-sm text-red-600"><%= todo.errors[:name].first %></p>
    <% end %>
  </div>

  <!-- Description Field -->
  <div>
    <%= form.label :description, class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.text_area :description, 
          rows: 4, 
          class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors resize-none", 
          placeholder: "Enter todo description" %>
    <% if todo.errors[:description].any? %>
      <p class="mt-1 text-sm text-red-600"><%= todo.errors[:description].first %></p>
    <% end %>
  </div>

  <!-- Completed Field -->
  <div>
    <div class="flex items-center space-x-3">
      <%= form.check_box :completed, 
            class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2" %>
      <%= form.label :completed, "Mark as completed", class: "text-sm font-medium text-slate-700" %>
    </div>
    <p class="text-xs text-slate-500 mt-1">Check this box if the todo is completed</p>
  </div>

  <!-- Due Date Field -->
  <div>
    <%= form.label :due_date, class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.date_field :due_date, 
          class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", 
          min: Date.current.to_s %>
    <p class="text-xs text-slate-500 mt-1">Optional: Set a due date for this todo</p>
    <% if todo.errors[:due_date].any? %>
      <p class="mt-1 text-sm text-red-600"><%= todo.errors[:due_date].first %></p>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="flex items-center justify-between">
    <div>
      <%= form.submit todo.new_record? ? "Create Todo" : "Update Todo", 
            class: "bg-indigo-600 text-white font-medium py-2.5 px-6 rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer shadow-md" %>
    </div>
    
    <% unless todo.new_record? %>
      <%= link_to "Cancel", @todo, 
            class: "text-slate-600 hover:text-slate-700 font-medium text-sm transition-colors" %>
    <% end %>
  </div>
<% end %>
