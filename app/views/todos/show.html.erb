<% content_for :title, @todo.description %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-slate-900 mb-4">
      <%= @todo.description %>
    </h1>

    <div class="flex justify-center items-center space-x-6 text-sm text-slate-500">
      <% if @todo.due_date.present? %>
        <span>Due: <%= @todo.due_date.strftime("%B %d, %Y") %></span>
      <% end %>

      <span>Created <%= time_ago_in_words(@todo.created_at) %> ago</span>
    </div>
  </div>

  <!-- Todo Details -->
  <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-8 mb-8">
    <div class="prose prose-slate max-w-none">
      <p class="text-slate-700"><%= @todo.description || "No description" %></p>
    </div>

    <!-- Actions -->
    <div class="mt-6 pt-6 border-t border-slate-200 flex justify-center space-x-4">
      <%= link_to "Edit Todo", edit_todo_path(@todo), 
            class: "bg-indigo-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-indigo-700 transition-colors" %>

      <%= link_to "Back to Todos", todos_path, 
            class: "text-slate-600 hover:text-slate-700 font-medium transition-colors mt-2" %>
    </div>
  </div>

  <!-- Notes Section -->
  <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-slate-900">Notes</h2>

      <%= link_to new_todo_note_path(@todo), 
            class: "bg-indigo-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-indigo-700 transition-colors flex items-center" do %>
        <svg
          class="w-4 h-4 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 4v16m8-8H4"
          ></path>
        </svg>
        Add Note
      <% end %>
    </div>

    <% if @todo.notes.any? %>
      <div class="space-y-4" data-controller="note-accordion">
        <% @todo.notes.each do |note| %>
          <div
            class="
              border border-slate-200 rounded-lg hover:border-indigo-300
              transition-colors
            "
            data-note-accordion-target="item"
          >
            <!-- Note Header (Always Visible) -->
            <div
              class="p-4 cursor-pointer"
              data-action="click->note-accordion#toggle"
              data-note-accordion-target="header"
            >
              <div class="flex justify-between items-start">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-slate-900 truncate">
                      <%= note.title %>
                    </h3>

                    <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
                      <!-- Edit Button -->
                      <%= link_to edit_todo_note_path(@todo, note), 
                            class: "text-indigo-600 hover:text-indigo-700 transition-colors p-1",
                            title: "Edit note",
                            data: { turbo_frame: "_top" } do %>
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                          ></path>
                        </svg>
                      <% end %>

                      <!-- Delete Button -->
                      <%= link_to [@todo, note], 
                            method: :delete, 
                            class: "text-red-600 hover:text-red-700 transition-colors p-1",
                            data: { turbo_confirm: "Are you sure you want to delete this note?" },
                            title: "Delete note" do %>
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                          ></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>

                  <div class="flex items-center space-x-4 text-xs text-slate-500 mt-1">
                    <span><%= time_ago_in_words(note.created_at) %> ago</span>

                    <% if note.body.present? %>
                      <span class="text-indigo-600 font-medium">
                        Click to expand
                      </span>
                    <% end %>
                  </div>
                </div>

                <!-- Expand/Collapse Icon -->
                <div class="ml-4 flex-shrink-0">
                  <svg
                    data-note-accordion-target="icon"
                    class="w-5 h-5 text-slate-400 transition-transform duration-200"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    ></path>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Note Content (Hidden by default, shown when expanded) -->
            <div
              data-note-accordion-target="content"
              class="hidden border-t border-slate-200"
            >
              <div class="p-4 pt-4">
                <div class="markdown-content text-sm text-slate-600">
                  <% if note.body.present? %>
                    <%== render_markdown(note.body) %>
                  <% else %>
                    <p class="text-slate-400 italic">No content</p>
                  <% end %>
                </div>

                <!-- View Full Note Link -->
                <div class="mt-4 pt-3 border-t border-slate-100">
                  <%= link_to todo_note_path(@todo, note), 
                            class: "inline-flex items-center text-sm text-indigo-600 hover:text-indigo-700 font-medium transition-colors",
                            data: { turbo_frame: "_top" } do %>
                    <svg
                      class="w-4 h-4 mr-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                      ></path>

                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                      ></path>
                    </svg>
                    View Full Note
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-slate-500">
          <svg
            class="mx-auto h-12 w-12 text-slate-400 mb-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>

          <p class="text-sm font-medium">No notes yet</p>
          <p class="text-xs mt-1">Add your first note to this todo</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
