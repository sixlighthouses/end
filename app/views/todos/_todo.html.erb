<div
  class="p-4 <%= todo.completed? ? 'bg-gray-50 opacity-75' : 'bg-white' %> hover:bg-gray-50 transition-colors"
  data-sortable-target="item"
  data-todo-id="<%= todo.id %>"
  draggable="<%= !todo.completed? %>"
  data-action="dragstart->sortable#dragstart dragend->sortable#dragend dragover->sortable#dragover drop->sortable#drop touchstart->sortable#touchstart touchmove->sortable#touchmove touchend->sortable#touchend"
>
  <!-- Header: Drag Handle and Status -->
  <div class="flex items-start justify-between mb-3">
    <div class="flex items-center space-x-3 flex-1 min-w-0">
      <!-- Drag Handle -->
      <div
        class="
          sortable-handle flex-shrink-0 text-gray-400 hover:text-gray-600
          cursor-move select-none
        "
        data-sortable-handle="true"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 8h16M4 16h16"
          ></path>
        </svg>
      </div>

      <!-- Completion Checkbox -->
      <%= check_box_tag "todo_completed_#{todo.id}", 
             todo.completed?, 
             todo.completed?, 
             class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2 flex-shrink-0",
             data: { 
               controller: "todo-completion",
               action: "change->todo-completion#toggle",
               todo_id: todo.id,
               url: todo_path(todo)
             } %>

      <!-- Description -->
      <div class="flex-1 min-w-0">
        <p class="text-sm <%= todo.completed? ? 'text-gray-400 line-through' : 'text-gray-900' %> truncate">
          <%= todo.description.present? ? todo.description : "<span class='text-gray-400 italic'>No description</span>".html_safe %>
        </p>
      </div>
    </div>

    <!-- Notes Badge (visible on larger screens) -->
    <% if todo.notes.any? %>
      <%= link_to todo, 
            class: "hidden sm:flex bg-indigo-100 text-indigo-700 hover:bg-indigo-200 inline-flex items-center justify-center w-7 h-7 rounded-full transition-colors flex-shrink-0 ml-2", 
            title: "#{todo.notes.count} note#{todo.notes.count == 1 ? '' : 's'} attached" do %>
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          ></path>
        </svg>
      <% end %>
    <% end %>
  </div>

  <!-- Footer: Due Date and Actions -->
  <div class="flex items-center justify-between pl-8">
    <!-- Due Date -->
    <div class="flex items-center text-sm">
      <% if todo.due_date.present? %>
        <svg
          class="w-4 h-4 mr-1.5 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 18h18M7 12h10"
          ></path>
        </svg>

        <span class="text-gray-600">
          <%= todo.due_date.strftime("%b %d, %Y") %>
        </span>

        <% if todo.overdue? %>
          <span
            class="
              ml-2 px-2 py-0.5 text-xs font-medium bg-red-100
              text-red-800 rounded-full
            "
          >
            Overdue
          </span>
        <% elsif todo.due_soon? %>
          <span
            class="
              ml-2 px-2 py-0.5 text-xs font-medium bg-yellow-100
              text-yellow-800 rounded-full
            "
          >
            Due Soon
          </span>
        <% end %>
      <% else %>
        <span class="text-gray-400 text-xs italic">No due date</span>
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center space-x-1">
      <!-- Notes Badge (mobile only) -->
      <% if todo.notes.any? %>
        <%= link_to todo, 
              class: "sm:hidden bg-indigo-100 text-indigo-700 hover:bg-indigo-200 inline-flex items-center justify-center w-7 h-7 rounded-full transition-colors", 
              title: "#{todo.notes.count} note#{todo.notes.count == 1 ? '' : 's'}" do %>
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
        <% end %>
      <% end %>

      <!-- View Button -->
      <%= link_to todo,
            class: "text-indigo-600 hover:text-indigo-900 inline-flex items-center justify-center w-8 h-8 rounded-full hover:bg-indigo-50 transition-colors", 
            title: "View todo" do %>
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
          ></path>
        </svg>
      <% end %>

      <!-- Edit Button -->
      <%= link_to edit_todo_path(todo), 
            class: "text-blue-600 hover:text-blue-900 inline-flex items-center justify-center w-8 h-8 rounded-full hover:bg-blue-50 transition-colors", 
            title: "Edit todo" do %>
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l17.586-8.586z"
          ></path>
        </svg>
      <% end %>

      <!-- Delete Button -->
      <%= button_to todo, 
            method: :delete, 
            class: "text-red-600 hover:text-red-900 inline-flex items-center justify-center w-8 h-8 rounded-full hover:bg-red-50 transition-colors border-0 bg-transparent cursor-pointer p-0", 
            title: "Delete todo", 
            data: { turbo_confirm: "Are you sure you want to delete this todo?" } do %>
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
          ></path>
        </svg>
      <% end %>
    </div>
  </div>
</div>
