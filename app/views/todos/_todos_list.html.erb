<% if todos.any? %>
  <div
    class="divide-y divide-gray-200"
    data-controller="sortable"
    data-sortable-dragging-class="dragging"
  >
    <% todos.each do |todo| %>
      <%= render todo %>
    <% end %>
  </div>
<% else %>
  <div class="p-8 text-center bg-white rounded-lg shadow-sm">
    <div class="text-gray-500">
      <svg
        class="mx-auto h-12 w-12 text-gray-400 mb-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
        ></path>
      </svg>

      <p class="text-sm font-medium">No active todos</p>
      <p class="text-xs mt-1">All todos are completed! Create a new one to get started.</p>
    </div>
  </div>
<% end %>
